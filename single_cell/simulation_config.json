{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/output"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 2000.0,
    "dt": 0.1,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 34.0,
    "v_init": -54
  },
  "inputs": {
    "current_clamp": {
      "input_type": "current_clamp",
      "module": "IClamp",
      "node_set": "all",
      "gids": "all",
      "amp": 0.5,
      "delay": 500.0,
      "duration": 750.0
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "v_report": {
      "variable_name": "v",
      "cells": "all",
      "module": "membrane_report",
      "sections": "soma"
    },
    "ina_report": {
      "variable_name": "ina",
      "cells": "all",
      "module": "membrane_report",
      "sections": "soma"
    },
    "ik_report": {
      "variable_name": "ik",
      "cells": "all",
      "module": "membrane_report",
      "sections": "soma"
    },
    "ninf_k1_report": {
      "variable_name": "ninf_k1",
      "cells": "all",
      "module": "membrane_report",
      "sections": "soma"
    },
    "minf_na1_report": {
      "variable_name": "minf_na1",
      "cells": "all",
      "module": "membrane_report",
      "sections": "soma"
    },
    "hinf_na1_report": {
      "variable_name": "hinf_na1",
      "cells": "all",
      "module": "membrane_report",
      "sections": "soma"
    }
  },
  "node_sets_file": "$BASE_DIR/node_sets.json",
  "network": "$BASE_DIR/circuit_config.json"
}